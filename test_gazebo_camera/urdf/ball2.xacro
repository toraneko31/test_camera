<?xml version="1.0"?>
<robot name="ball2" xmlns:xacro="http:/www.ros.org/wiki/xacro">

  <xacro:include filename="$(find test_gazebo_camera)/urdf/ball2.gazebo"/>
  <xacro:include filename="$(find test_gazebo_camera)/urdf/materials.xacro"/>

  <link name="world"/>
  <joint name="fix" type="fixed">
    <origin xyz = "0 0 0.5" rpy="0 0 0"/>
    <parent link = "world"/>
    <child link = "link1"/>
  </joint>

  <link name="link1">
    <collision>
      <origin xyz = "-0.2 1 0.1" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.1"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz = "-0.2 1 0.1" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.1"/>
      </geometry>
      <material name="red"/>
    </visual>

    <inertial>
      <mass value = "0.001"/>
      <origin xyz = "-0.2 1 0.1" rpy="0 0 0"/>
      <inertia ixx="0.0001" ixy = "0" ixz = "0" iyy= "0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>
</robot>




